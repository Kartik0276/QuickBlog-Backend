# ===================================
# QuickBlog Server - Environment Variables Example
# ===================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# Database Configuration
MONGODB_URI=mongodb://localhost:27017
# Example for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net

# JWT Secret (Use a strong, random secret in production)
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# Admin Credentials (Change these in production!)
ADMIN_EMAIL=admin@quickblog.com
ADMIN_PASSWORD=your-secure-admin-password

# Server Configuration
PORT=5000
NODE_ENV=development

# ImageKit Configuration (for image uploads)
IMAGEKIT_PUBLIC_KEY=your-imagekit-public-key
IMAGEKIT_PRIVATE_KEY=your-imagekit-private-key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your-imagekit-id

# CORS Configuration
CLIENT_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Email Configuration (if implementing email features)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Redis Configuration (if implementing caching)
# REDIS_URL=redis://localhost:6379

# AWS Configuration (if using AWS services)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-s3-bucket-name

# Cloudinary Configuration (alternative to ImageKit)
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
# SESSION_SECRET=your-session-secret

# API Keys for AI Services (if implementing real AI)
# OPENAI_API_KEY=your-openai-api-key
# CLAUDE_API_KEY=your-claude-api-key

# Monitoring and Analytics
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=your-ga-id

# Social Media API Keys (if implementing social features)
# FACEBOOK_APP_ID=your-facebook-app-id
# TWITTER_API_KEY=your-twitter-api-key
# LINKEDIN_CLIENT_ID=your-linkedin-client-id

# Payment Gateway (if implementing paid features)
# STRIPE_SECRET_KEY=your-stripe-secret-key
# STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# File Upload Limits
# MAX_FILE_SIZE=5242880
# ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# Security
# BCRYPT_ROUNDS=12
# COOKIE_SECRET=your-cookie-secret

# Logging
# LOG_LEVEL=info
# LOG_FILE=logs/app.log

# Development/Testing
# TEST_DATABASE_URL=mongodb://localhost:27017/quickblog_test
# MOCK_EMAIL=true
